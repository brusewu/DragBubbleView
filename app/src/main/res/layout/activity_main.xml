<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:clipChildren="false"
    tools:context="com.example.wuxiaolong.dragbubbleview.MainActivity">

    <com.example.wuxiaolong.dragbubbleview.DragBubbleView
        android:id="@+id/dragBubbleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:bubbleColor="#ff0000"
        app:bubbleRadius="16dp"
        app:textColor="#ffffff"
        app:textSize="16sp" />

    <Button
        android:id="@+id/reCreateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="reCreate" />

</RelativeLayout>
